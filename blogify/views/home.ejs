<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./link") %>
    <title>Blogify</title>
  </head>

  <body>
    <%- include("./nav") %>

    <div class="container mt-3 row">
      <div class="row row-col-3">
        <% blogs.forEach(blog => { %>
          <div class="card mx-3 " style="width: 18rem; padding-top: 10px;">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" >
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <%- include("./script") %>
  </body>
</html>
