<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./link") %>
    <title>Add Blog</title>
  </head>

  <body>
    <%- include("./nav") %>
    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mx-3 my-3 ">
                <div class="mx-3 my-3">
                    <label for="coverimage" class="form-label">CoverImage</label>
                    <input type="file" id="coverimage" name="coverimage" class="form-control" aria-describedby="coverimage">
                </div>
    
                <div class="mx-3 my-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="title" id="title" name="title" class="form-control" aria-describedby="title">
                </div>
        
                <label for="body " class="mx-3">Body</label>
                <div class="form-floating mx-3 my-3">
                    <textarea
                    class="form-control"
                    name="body"
                    id="floatingTextarea2"
                    style="height: 100px"
                    ></textarea>
                </div>
                <button type="submit" class="btn btn-primary mx-3">Submit</button>
            </div>
        </form>
    </div>
    <%- include("./script") %>
  </body>
</html>
